<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/appIconView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/appLabelView"
        app:shapeAppearanceOverlay="@style/appIcon" />

    <TextView
        android:id="@+id/appLabelView"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/app_name"
        android:textColor="@color/textColorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/appIconView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appUsageView"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/app_name"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/appLabelView"
        app:layout_constraintStart_toStartOf="@id/appLabelView"
        app:layout_constraintTop_toBottomOf="@id/appLabelView" />

    <TextView
        android:id="@+id/appPkgView"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.7"
        android:text="@string/app_name"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/appUsageView"
        app:layout_constraintStart_toStartOf="@id/appIconView"
        app:layout_constraintTop_toBottomOf="@id/appUsageView" />

</androidx.constraintlayout.widget.ConstraintLayout>